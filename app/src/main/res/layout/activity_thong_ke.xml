<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ThongKeActivity">
    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Số đơn hàng đã được đặt : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_tongso_donhang"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Tổng tiền thu nhập : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_tongtien_thunhap"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="23,500.000 đòng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>